{
  "manifest_version": 3,
  "name": "Trip Down Melody Lane",
  "version": "1.0",
  "description": "Chrome Extension integrating Google Photos and Spotify",

  "permissions": ["activeTab", "scripting", "identity"],
 
  "host_permissions": [
    "https://photos.google.com/*",
    "https://accounts.spotify.com/*",
    "https://api.spotify.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://photos.google.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
